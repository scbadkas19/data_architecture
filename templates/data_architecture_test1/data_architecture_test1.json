{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name"
		},
		"chevron_Mongo_connector": {
			"type": "string"
		},
		"outputmongoazure": {
			"type": "string"
		},
		"Chevron_Pulse_sql_server": {
			"type": "string"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/copymomenta_chevron_cosmos')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Copying chevron Momenta data to cosmos db - ",
				"activities": [
					{
						"name": "CopyChevron From MomnetaMongoDB",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "users"
							},
							{
								"name": "Destination",
								"value": "Chevron"
							}
						],
						"typeProperties": {
							"source": {
								"type": "MongoDbV2Source",
								"batchSize": 100,
								"filter": "",
								"cursorMethods": {
									"project": "{\"_id\":1,\"lastSuccessfulLoginAt\":1}"
								}
							},
							"sink": {
								"type": "CosmosDbMongoDbApiSink",
								"writeBatchTimeout": "00:30:00",
								"writeBehavior": "insert"
							},
							"enableStaging": false,
							"validateDataConsistency": false
						},
						"inputs": [
							{
								"referenceName": "SourceDataset_h8n",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_h8n",
								"type": "DatasetReference"
							}
						]
					},
					{
						"name": "CopyChevron From SQL",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "SqlServerSource",
								"sqlReaderQuery": "SELECT distinct HASHBYTES('MD5', [Name]) as hashedname\n      ,[UpdatedOn]\n      \n  FROM [syntase].[dbo].[OnlineUser]",
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "CosmosDbMongoDbApiSink",
								"writeBatchTimeout": "00:30:00",
								"writeBehavior": "insert"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "hashedname",
											"type": "Byte[]"
										},
										"sink": {
											"path": "$['_id']['$oid']"
										}
									},
									{
										"source": {
											"name": "UpdatedOn",
											"type": "DateTime"
										},
										"sink": {
											"path": "$['lastSuccessfulLoginAt']['$date']"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "SqlServerTable1",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_h8n",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": [],
				"lastPublishTime": "2021-06-21T08:08:02Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceDataset_h8n')]",
				"[concat(variables('factoryId'), '/datasets/DestinationDataset_h8n')]",
				"[concat(variables('factoryId'), '/datasets/SqlServerTable1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceDataset_h8n')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "[parameters('chevron_Mongo_connector')]",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "MongoDbV2Collection",
				"schema": [],
				"typeProperties": {
					"collection": "users"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/DestinationDataset_h8n')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "[parameters('outputmongoazure')]",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "CosmosDbMongoDbApiCollection",
				"schema": [],
				"typeProperties": {
					"collection": "Chevron"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/SqlServerTable1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "[parameters('Chevron_Pulse_sql_server')]",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "SqlServerTable",
				"schema": [
					{
						"name": "Id",
						"type": "int",
						"precision": 10
					},
					{
						"name": "Name",
						"type": "nvarchar"
					},
					{
						"name": "Email",
						"type": "nvarchar"
					},
					{
						"name": "Password",
						"type": "nvarchar"
					},
					{
						"name": "UserToken",
						"type": "nvarchar"
					},
					{
						"name": "MailSent",
						"type": "int",
						"precision": 10
					},
					{
						"name": "PasswordHash",
						"type": "varchar"
					},
					{
						"name": "UniversalId",
						"type": "nvarchar"
					},
					{
						"name": "UpdatedOn",
						"type": "datetime",
						"precision": 23,
						"scale": 3
					},
					{
						"name": "Disabled",
						"type": "bit"
					},
					{
						"name": "PasswordExpiry",
						"type": "datetime",
						"precision": 23,
						"scale": 3
					},
					{
						"name": "FailedLoginAttemps",
						"type": "int",
						"precision": 10
					},
					{
						"name": "LastFailedLoginAttempt",
						"type": "datetime",
						"precision": 23,
						"scale": 3
					},
					{
						"name": "RememberMeToken",
						"type": "nvarchar"
					},
					{
						"name": "PasswordChanged",
						"type": "datetimeoffset",
						"scale": 7
					},
					{
						"name": "VerifiedPassword",
						"type": "bit"
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "OnlineUser"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/default')]",
			"type": "Microsoft.DataFactory/factories/managedVirtualNetworks",
			"apiVersion": "2018-06-01",
			"properties": {
				"preventDataExfiltration": false
			},
			"dependsOn": []
		}
	]
}